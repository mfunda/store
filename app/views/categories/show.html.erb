<p id="notice"><%= notice %></p>
<%= link_to 'Back', categories_path, class: "price" %>

<div class='product-img'>
  <%= image_tag @category.avatar.url %>
</div>


<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<p>
  <strong>Products in this category:</strong>

  <% @product.each do |p|%>
	  <div class='prod-belongs'>
		  <%= link_to p do %>
		  	<%=image_tag p.avatar.url, class: "radius-l1"%>
		  <% end %>
		  <p><strong><%= p.name %></strong></p>
	  </div>
  <% end %>
</p>