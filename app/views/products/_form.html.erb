<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, as: :file %>
  </div>
  <div class='field'>
    <%= label_tag 'Categories: ' %> <br>
    <%@categories.each do |cat| %>
      <%= check_box_tag "[category_id][]", cat.id, @product.category_ids.include?(cat.id), id: dom_id(cat) %>
      <%= label_tag dom_id(cat), cat.name %><br>
    <% end %>
  </div>
    <div class="field">
      <%= label_tag 'Producers: ' %><br>
      <%= f.number_field :producer_id %>
  </div>
  <div class="actions">
    <%= f.submit class: 'price' %> 
  </div>
<% end %>
